.post.block {
  padding: 0 2rem;
}

.md {
  font-family: $font-family-posts;
  word-wrap();

  .exturl .ic {
    font-size: $font-size-small;
    margin-left: .25rem;
  }

  .button {
    margin-top: 2.5rem;
    text-align: center;
  }
}

.post-content--novel {
  p {
    text-indent: 2em;
    font-size: 1.2em;
    font-weight: bold;
    line-height: 1.8;
    padding: 1em 0;
  }
}

